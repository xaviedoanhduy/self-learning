        <xpath expr="//span[1]" position="replace">
            <span style="font-size: 24px; margin-right: 10px;">
                <t t-out="state.isAngry ? 'ðŸ˜ ' : (state.isCool ? 'ðŸ˜Ž' : 'ðŸ˜Š')"/>
            </span>
